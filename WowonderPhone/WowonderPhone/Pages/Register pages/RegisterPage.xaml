  <!--MAIN CONTAINER-->
  <Grid>
    <!---BACKGROUND IMAGE-->
    <Image Style="{StaticResource SignUpBackgroundImage}"/>

    <ScrollView
			Padding="{ DynamicResource MainWrapperPadding }">

      <!-- MAIN CONTAINER -->
      <Grid
			ColumnSpacing="0"
			RowSpacing="0"
			HorizontalOptions="Fill"
			VerticalOptions="FillAndExpand" >

        <Grid.RowDefinitions>
          <RowDefinition Height="22" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- LOGO -->
        <!--<Grid
          Grid.Row="0"
          WidthRequest="60"
          HeightRequest="60"
          Margin="20"
          VerticalOptions="End"
          HorizontalOptions="Start">

          <BoxView
            BackgroundColor="#444"/>

          <Image
       Grid.Column="0"
         Margin="0,0,0,0"
       Source="icon.png"
        HeightRequest="40"
         WidthRequest="40"
        VerticalOptions="Center"
           HorizontalOptions="Center"/>-->
          
          <!--<Label
            TextColor="{ DynamicResource OverImageTextColor }"
            FontSize="42"
            Text="{ x:Static local:GrialShapesFont.LogoGrial }"
            Style="{StaticResource FontIcon}"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"/>-->
          
        <!--</Grid>-->


        <!-- CLOSE ICON -->
        <Label
          Style="{DynamicResource IconCloseLabelStyle}"
          HorizontalOptions="End"
          VerticalOptions="Start"
          TranslationX="-21"
          TranslationY="35"
          Grid.Row="0">
          <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnCloseButtonClicked" />
          </Label.GestureRecognizers>
        </Label>

        <!--CLAIM TEXT-->
        <StackLayout
          Grid.Row="1"
          Spacing="10"
          Padding="20"
          Orientation="Vertical"
          VerticalOptions="Center">
          <Label
            LineBreakMode="WordWrap"
            Text="Register now"
            TextColor="White"
            VerticalTextAlignment="Center"
            FontAttributes="Bold"
            AbsoluteLayout.LayoutFlags="All">
            <Label.FontSize>
              <OnIdiom x:TypeArguments="x:Double"
									 Phone="26"
									 Tablet="36"/>
            </Label.FontSize>
          </Label>
          <Label
						LineBreakMode="WordWrap"
						Text="{languish:Translate Label_Register_Now_And}"
						TextColor="White"
						VerticalTextAlignment="Center"
						AbsoluteLayout.LayoutFlags="All">
            <Label.FontSize>
              <OnIdiom x:TypeArguments="x:Double"
                     Phone="17"
                     Tablet="27"/>
            </Label.FontSize>
          </Label>

          <BoxView
            Style="{StaticResource BrandNameOrnamentStyle}"
            BackgroundColor="White"/>

        </StackLayout>

        <!---FIELDS CONTAINER-->
        <Grid
          Padding="30,0" TranslationY="-4"
          VerticalOptions="CenterAndExpand"
          HeightRequest="260"
          Grid.Row="2">
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <StackLayout
						Grid.Row="0"
						VerticalOptions="Start">
            <!---EMAIL FIELD-->
            <Entry
							Placeholder="{languish:Translate Label_Email}" x:Name="EmailEntry"
							Style="{DynamicResource ArtinaLoginEntryStyle}">

              <Entry.Behaviors>
                <shared:EmailValidatorBehavior x:Name="emailValidator" />
              </Entry.Behaviors>
            </Entry>

            <Label
							Text="{languish:Translate Label_Please_Enter_Valid_Email}" IsVisible="false"
							Style="{DynamicResource ValidationEntryErrorStyle}">

              <Label.Triggers>
                <DataTrigger TargetType="Label"
									Binding="{Binding Source={x:Reference emailValidator}, Path=IsValid}"
									Value="false">
                  <Setter Property="IsVisible" Value="true" />
                </DataTrigger>
              </Label.Triggers>
            </Label>
          </StackLayout>

          <!---USERNAME FIELD-->
          <Entry
						Grid.Row="1"
						Placeholder="{languish:Translate Label_Username}"
            x:Name="usernameEntry"
						Style="{DynamicResource ArtinaLoginEntryStyle}"
						VerticalOptions="StartAndExpand" />


          <!---PASSWORD FIELD-->
          <Entry x:Name="passwordEntry"
						Grid.Row="2"
						Placeholder="{languish:Translate Label_Password}"
						IsPassword="true"
						Style="{DynamicResource ArtinaLoginEntryStyle}"
						VerticalOptions="StartAndExpand" />

          <StackLayout
						Grid.Row="3"
						VerticalOptions="StartAndExpand" >

            <!---PASSWORD REPEAT FIELD-->
            <Entry
							Placeholder="{languish:Translate Label_RepeatPassword}"
							IsPassword="true"
              x:Name="passwordConfirmEntry"
							Style="{DynamicResource ArtinaLoginEntryStyle}"
							>
              <Entry.Behaviors>
                <shared:TextMatchValidatorBehavior x:Name="passwordValidator"
									TextToMatch="{Binding Source={x:Reference passwordEntry}, Path=Text}"/>
              </Entry.Behaviors>
            </Entry>

            <Label
							Text="{languish:Translate Label_Your_Password_Dont_Match}" IsVisible="false"
							Style="{DynamicResource ValidationEntryErrorStyle}"
							>

              <Label.Triggers>
                <DataTrigger
									TargetType="Label"
									Binding="{Binding Source={x:Reference passwordValidator}, Path=IsValid}"
									Value="false">
                  <Setter Property="IsVisible" Value="true" />
                </DataTrigger>
              </Label.Triggers>

            </Label>
          </StackLayout>
        </Grid>

        <!-- FOOTER -->
        <StackLayout
          x:Name="loginStack"
          HorizontalOptions="Fill"
          VerticalOptions="End"
          Padding="20, 0"
          Grid.Row="3" >

          <controls:ExtendedButton
            Style="{DynamicResource PrimaryActionButtonStyle}"
            VerticalOptions="End"
            Text="{languish:Translate Label_Sign_Up}"
            Clicked="RegisterButton_OnClicked"
            WidthRequest="200"
            HorizontalOptions="Fill"/>

          <controls:ExtendedButton
            Style="{DynamicResource TransparentButtonStyle}"
            VerticalOptions="End"
            Text="{languish:Translate Label_Already_a_User_Login_now} "
            WidthRequest="200"
            Clicked="Button_OnClicked"
            HorizontalOptions="Fill"/>

        </StackLayout>

      </Grid>

    </ScrollView>
  </Grid>
  
  
  
  
  
  
